@{ Layout = "_Layout"; }

@using SillyFactory.Models;

<h1>Engineer</h1>

@if (@Model.Count == 0)
{
  <h3>The engineer personnel roster is empty.</h3>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<p>@Html.ActionLink("Add an engineer", "Create")</p>