@{ Layout = "_Layout"; }

@using SillyFactory.Models;
@model List<SillyFactory.Models.Machine>;

<h1>Machine Inventory</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added to the inventory.</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Model}: {machine.Serial}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>