@{ Layout = "_Layout"; }

@model SillyFactory.Models.Engineer

<h2>Add a new engineer</h2>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})

  @Html.LabelFor(model => model.HireDate)
  @Html.TextBoxFor(model => model.HireDate, new {@class="form-control", @type="date", @required="required"})

  @Html.LabelFor(model => model.CertDate)
  @Html.TextBoxFor(model => model.CertDate, new {@class="form-control", @type="date", @required="required"})
  
  @Html.LabelFor(model => model.CertNum)
  @Html.TextBoxFor(model => model.CertNum, new {@class="form-control", @type="number", @required="required"})

  @Html.LabelFor(model => model.CertExp)
  @Html.TextBoxFor(model => model.CertExp, new {@class="form-control", @type="date", @required="required"})

  /* @Html.Label("Assign a machine")
  @Html.DropDownList("MachineId") */

  <input type="submit" value="Add new engineer" />
}

<p>@Html.ActionLink("Show all engineers", "Index")</p>